<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10pt"
    android:paddingRight="10pt"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="fill_vertical|end"
            android:text="@string/app_name_text"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/holidayListText"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="@string/holiday_list_text"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="430dp">

        <TableLayout
            android:id="@+id/nextHolidaysTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/black" />
    <Button
        android:id="@+id/plannerButton"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#01579B"
        android:text="Long weekend planner"
        app:cornerRadius="20dp" />

</LinearLayout>